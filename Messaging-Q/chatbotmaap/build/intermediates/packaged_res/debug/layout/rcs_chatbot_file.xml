<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/rcs_chatbot_file_image"
        android:layout_width="@dimen/public_single_width"
        android:layout_height="@dimen/public_chatbot_single_height_medium"
        android:background="#000"
        android:scaleType="fitXY"
        android:visibility="gone"
        />
    <FrameLayout
        android:id="@+id/rcs_chatbot_file_video_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/rcs_chatbot_file_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:minHeight="120dp"
            android:minWidth="150dp"
            android:maxHeight="300dp"
            android:maxWidth="300dp" />
        <ImageView
            android:id="@+id/rcs_chatbot_file_video_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_player_start"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/rcs_chatbot_record_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_player_start"
            android:id="@+id/rcs_chatbot_record_image"/>
        <TextView
            android:id="@+id/rcs_chatbot_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_gravity="center"
            />
        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:max="100"
            android:id="@+id/rcs_chatbot_record_seekbar"/>

    </LinearLayout>
</LinearLayout>
